@{
    var errorCode = ViewData["ErrorCode"] as string;
    var isAuthenticated = (bool)ViewData["IsAuthenticated"];
    if (isAuthenticated)
    {
        Layout = "Mox/_Layout";
    }
}

<div style="text-align: center;">
    <h1 style="font-size: 60px;">@errorCode</h1>
    @if (errorCode.StartsWith("4"))
    {
        <p>Sidan kunde inte hittas!</p>
    }
    else
    {
        <p>Denna sida har ett fel!</p>
    }
</div>