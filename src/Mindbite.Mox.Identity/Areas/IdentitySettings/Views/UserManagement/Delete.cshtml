@using Mindbite.Mox.UI 
@using Mindbite.Mox.Extensions
@using Microsoft.Extensions.Localization;
@{
    Layout = "Mox/_Layout";
}
@model Mindbite.Mox.Identity.Data.Models.MoxUser
@inject IStringLocalizer localizer

@await Html.Mox().BreadCrumbsAsync(BreadCrumbMenuReference.Current) 
<h1>@localizer["Ta bort användare"]</h1>
@Html.Mox().Message()

<div class="mox-display">
    @Html.LabelFor(model => model.UserName)
    <div class="mox-display-content">@Html.DisplayFor(model => model.Name)</div>

    @Html.LabelFor(model => model.Email)
    <div class="mox-display-content">@Html.DisplayFor(model => model.Email)</div>
</div>

<p class="text-danger">@ViewData["ErrorMessage"]</p>
<p>@localizer["Är du säker på att du vill ta bort {0}?", Model.Name]</p>
@using (Html.BeginForm())
{
    <fieldset>
        <p>
            <input type="submit" value="@localizer["Ta bort"]" />
        </p>
    </fieldset>
}