@using Mindbite.Mox.Extensions
@{
    Layout = this.Context.Request.IsAjaxRequest() ? "" : "Mox/_Layout";
}
@model Mindbite.Mox.DesignDemoApp.Data.Models.Design

@if (!this.Context.Request.IsAjaxRequest())
{
    @await Html.PartialAsync("Mox/UI/AppBreadCrumbs", new { IncludeCurrentMenu = true }.ToExpando())
}

<h1>Skapa ny design</h1>

<div id="js-form">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <p>
                @Html.LabelFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
                @Html.TextBoxFor(model => model.Title)
            </p>

            <p>
                @Html.LabelFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
                @Html.TextAreaFor(model => model.Description)
            </p>

        </fieldset>
        <fieldset class="buttons">
            <p>
                <input type="submit" value="Skapa" />
            </p>
        </fieldset>
    }
</div>
